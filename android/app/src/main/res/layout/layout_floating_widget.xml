<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60mm"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/borda"
            android:id="@+id/expanded_container"
            android:layout_width="60mm"
            android:layout_height="10mm"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_button"
                android:layout_marginLeft="1mm"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_left"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/right_button"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_right"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/up_button"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_up"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/down_button"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_down"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/center_button"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_center"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/save_button"
                android:layout_marginTop="1mm"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_save"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_marginTop="1mm"
                android:id="@+id/close_button"
                android:layout_width="8mm"
                android:layout_height="8mm"
                android:src="@drawable/arrow_close"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icoapp"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8mm"
                android:src="@drawable/error"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>